<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="text-center">
                        <h3><i class="fa fa-lock fa-4x"></i></h3>
                        <h2 class="text-center">{{pageTitle}}</h2>
                        <p>You can reset your password here.</p>
                        <div class="panel-body">

                            <form id="register-form" role="form" class="form" method="post" action="/login/reset/new-password">

                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                        <input id="password" name="passwd" placeholder="password" class="form-control"  type="password">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="hidden" name="userId" value="{{userId}}">
                                    <input type="hidden" name="passwordtoken" value="{{passwordtoken}}">
                                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                                    <button class="btn btn-primary" type="submit">Password</button>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
