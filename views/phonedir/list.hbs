<div class="d-flex justify-content-between" style="margin-bottom: 2rem;">
    <h3>{{viewTitle}}</h3>
    <div class="d-flex justify-content-between">
        <a href="/phonebook" class="btn btn-secondary float-left">Create New</a>
        <form method="post" action="/login/logout">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button type="submit" class="btn btn-primary float-left">Logout</button>
        </form>
    </div>
</div>
<form action="/phonebook/search" class="form-inline float-center d-flex justify-content-center" style="margin-bottom: 2rem;" method="post">
    <div class="form-group">
        <input type="text" id="Search1" class="form-control" name="name" placeholder="Name">
        <input type="text" id="Search2" class="form-control" name="email" placeholder="Email">
        <input type="text" id="Search3" class="form-control" name="number" placeholder="Number">
        <input type="submit" name="Search" class="btn btn-primary">
    </div>
</form>
<table class="table tav=ble-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Full Name</th>
            <th>Date Of Birth</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th></th>
            <th></th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        {{#each list }}

           <tr>
               <td>
                   <img src="/{{image}}" class="img-thumbnail" style="width: 50px; height: 50px">
               </td>
               <td>
                   {{FullName}}
               </td>
               <td>
                   {{DOB}}
                </td>
               <td>
                   {{email}}
               </td>
               <td>
                   {{mobile}}
                </td>
               <td>
                   <a href="/phonebook/{{this._id}}" style="background-color: aqua;color: white;padding: .1rem .3rem ;border-radius: 6px; text-decoration: none">Edit</a>
                   <a href="/phonebook/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');" style="background-color: red;color: white;padding: .1rem .3rem ;border-radius: 6px; text-decoration: none">Delete</a>

                </td>
           </tr>
        {{/each}}
    </tbody>
</table>

<section class="d-flex justify-content-center">
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="/phonebook/list/?page=1">1</a></li>
            <li class="page-item"><a class="page-link" href="/phonebook/list/?page=2">2</a></li>
            <li class="page-item"><a class="page-link" href="/phonebook/list/?page=3">3</a></li>
            <li class="page-item"><a class="page-link" href="/phonebook/list/?page=4">4</a></li>

        </ul>
    </nav>
</section>



